#! /bin/sh

set -e

DAEMONNAME='wazo-admin-ui'
LOG_FILENAME="/var/log/${DAEMONNAME}.log"
USER='wazo-admin-ui'
GROUP='www-data'

case "$1" in
	configure)
		# add user
		if ! getent passwd $USER > /dev/null ; then
			echo "Adding system user for ${USER}" 1>&2
			adduser --system --group --quiet \
				--home /var/www \
				--no-create-home --disabled-login \
				$USER
		fi

		adduser --quiet $USER $GROUP

		if [ ! -e "$LOG_FILENAME" ]; then
			touch "$LOG_FILENAME"
		fi
		chown $USER:$GROUP "$LOG_FILENAME"

		if dpkg --compare-versions "$2" lt '17.03'; then
			ln -sf  /etc/nginx/locations/https-available/$DAEMONNAME \
				/etc/nginx/locations/https-enabled/$DAEMONNAME
		fi

	;;

	abort-upgrade|abort-remove|abort-deconfigure)
	;;

	*)
		echo "postinst called with unknown argument \`$1'" >&2
		exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
